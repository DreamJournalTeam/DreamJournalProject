<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="10pt"
        android:id="@+id/QuestionTextview1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/QuestionEdittext1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/QuestionTextview1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="80dp"
        android:gravity="top|left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QuestionTextview2"
        android:text="Question 2"
        android:textSize="10pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/QuestionEdittext2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/QuestionTextview1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:gravity="top|left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QuestionTextview3"
        android:text="Question 3"
        android:textSize="10pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/QuestionEdittext3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/QuestionTextview1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="80dp"
        android:layout_marginTop="240dp"
        android:gravity="top|left"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"
        android:text="Save"
        android:id="@+id/activity_questions_save_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"
        android:text="Cancel"
        android:id="@+id/activity_questions_cancel_button"/>


</RelativeLayout>
