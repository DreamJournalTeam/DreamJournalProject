<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Click in the box to write about your dream"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="400dp"
        android:background="@color/bright_foreground_inverse_material_light"
        android:id="@+id/enter_dream_edittext"
        android:gravity="top|left"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

    </RelativeLayout>

    <Button
        android:id="@+id/enter_dream_continue_button"
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/enter_dream_change_ending_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Ending"
        android:layout_alignTop="@+id/enter_dream_continue_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/enter_dream_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignTop="@+id/enter_dream_change_ending_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>